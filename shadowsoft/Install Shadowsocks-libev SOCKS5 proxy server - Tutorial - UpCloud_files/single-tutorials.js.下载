var slidingComponent=$('.tutorial-index-wrap .the-vertical-tabs .sliding-border');var listHeight=$('.tutorial-index-wrap .the-vertical-tabs .tabs-title').outerHeight();slidingComponent.css('height',listHeight);$(window).on('scroll',function(){if($(window).width()<1024)return;var scrollPosition=$(document).scrollTop();$('.tutorial-index-wrap .the-vertical-tabs a').each(function(){var currentLink=$(this);var refElement=$(currentLink.attr("href"));if((refElement.position().top-200)<=scrollPosition&&refElement.position().top+refElement.height()>scrollPosition){$('.tutorial-index-wrap .the-vertical-tabs a.is-active').removeClass('is-active');$(this).addClass('is-active').focus();var position=$(this);activePosition=position.parent().position().top;listHeight=position.parent().outerHeight();slidingComponent.css('height',listHeight);slidingComponent.css('transform','translateY('+activePosition+'px)');}
else{currentLink.removeClass("is-active");}});});